{
  "name": "@metamorfosilab/lib-template",
  "shortName": "lib-template",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.14.0",
  "description": "_description_",
  "author": "Roman Hrynevych <hrynevych.romann@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/MetamorfosiLab/lib-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MetamorfosiLab/lib-template.git"
  },
  "bugs": "https://github.com/MetamorfosiLab/lib-template/issues",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./*": "./*"
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel lib:dev play:dev",
    "build": "pnpm rollup:full & pnpm rollup:core",
    "lib:dev": "rollup --config rollup-full.config.ts --configPlugin @rollup/plugin-typescript --watch",
    "rollup:full": "rollup --config rollup-full.config.ts --configPlugin @rollup/plugin-typescript",
    "rollup:core": "rollup --config rollup-core.config.ts --configPlugin @rollup/plugin-typescript",
    "lint": "eslint .",
    "prepublishOnly": "nr lib:build",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "docs:dev": "pnpm -F=docs dev",
    "docs:build": "pnpm -F=docs build",
    "docs:preview": "pnpm -F=docs preview",
    "play:dev": "pnpm -F=playground dev",
    "play:build": "pnpm -F=playground build",
    "play:preview": "pnpm -F=playground preview"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.2",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/gtag.js": "^0.0.18",
    "@types/node": "^20.10.7",
    "@types/postcss-import": "^14.0.3",
    "@vitest/coverage-istanbul": "^1.2.2",
    "bumpp": "^9.2.1",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^8.14.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-import": "^16.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-ts": "^3.4.5",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "vitest": "^1.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
